@model CMCS.Prototype.Controllers.ManagerVm
@{
    ViewData["Title"] = "Manager Overview";
}

<h2 class="mb-3">Manager Overview</h2>

<ul class="nav nav-tabs" role="tablist">
    <li class="nav-item">
        <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#pending" type="button" role="tab">Pending (@Model.Pending.Count)</button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#approved" type="button" role="tab">Approved (@Model.Approved.Count)</button>
    </li>
    <li class="nav-item">
        <button class="nav-link" data-bs-toggle="tab" data-bs-target="#rejected" type="button" role="tab">Rejected (@Model.Rejected.Count)</button>
    </li>
</ul>

<div class="tab-content pt-3">
    <div class="tab-pane fade show active" id="pending" role="tabpanel">
        @Html.Partial("_ClaimsList", Model.Pending)
    </div>
    <div class="tab-pane fade" id="approved" role="tabpanel">
        @Html.Partial("_ClaimsList", Model.Approved)
    </div>
    <div class="tab-pane fade" id="rejected" role="tabpanel">
        @Html.Partial("_ClaimsList", Model.Rejected)
    </div>
</div>
