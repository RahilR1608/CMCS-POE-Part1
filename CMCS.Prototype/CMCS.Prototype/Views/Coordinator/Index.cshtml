@model IEnumerable<CMCS.Prototype.Models.Claim>
@{
    ViewData["Title"] = "Pending Claims";
}
<h2 class="mb-3">Pending Claims</h2>

@if (TempData["Msg"] != null)
{
    <div class="alert alert-success">@TempData["Msg"]</div>
}

@if (!Model.Any())
{
    <div class="alert alert-info">No pending claims to review.</div>
}
else
{
    @foreach (var c in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">
                    @c.LecturerId • @c.Month/@c.Year
                    <span class="ms-2 badge bg-warning text-dark">Pending</span>
                </h5>
                <p class="card-text">
                    Hours: <strong>@c.HoursWorked</strong> •
                    Rate: <strong>@c.HourlyRate.ToString("C2")</strong> •
                    Total: <strong>@c.TotalAmount.ToString("C2")</strong>
                </p>

                <form asp-controller="Claims" asp-action="Decide" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@c.ClaimId" />
                    <input type="hidden" name="comment" value="Reviewed by Coordinator" />
                    <button class="btn btn-success" name="decision" value="Approved">Approve</button>
                    <button class="btn btn-danger" name="decision" value="Rejected">Reject</button>
                    <a class="btn btn-outline-secondary" asp-controller="Claims" asp-action="Details" asp-route-id="@c.ClaimId">View</a>
                </form>
            </div>
        </div>
    }
}
