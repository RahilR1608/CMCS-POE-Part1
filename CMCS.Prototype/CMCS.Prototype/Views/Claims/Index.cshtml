@model IEnumerable<CMCS.Prototype.Models.Claim>
@{
    ViewData["Title"] = "Claims";
}
<h2>Claims</h2>

@if (TempData["Msg"] != null)
{
     <div class="alert alert-success">@TempData["Msg"]</div>
}

<p>
    <a class="btn btn-primary" asp-action="Create">+ New Claim</a>
</p>

<table class="table table-striped align-middle">
    <thead>
        <tr>
            <th>Lecturer</th>
            <th>Month</th>
            <th>Hours</th>
            <th>Total</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Lecturer?.FullName</td>
                <td>@c.Month/@c.Year</td>
                <td>@c.HoursWorked</td>
                <td>@c.TotalAmount.ToString("C2")</td>
                <td>
                    @switch (c.Status)
                    {
                        case CMCS.Prototype.Models.DecisionStatus.Pending:
                            <span class="badge bg-warning text-dark">Pending</span>
                            ; break;
                        case CMCS.Prototype.Models.DecisionStatus.Approved:
                            <span class="badge bg-success">Approved</span>
                            ; break;
                        case CMCS.Prototype.Models.DecisionStatus.Rejected:
                            <span class="badge bg-danger">Rejected</span>
                            ; break;
                    }
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-action="Details" asp-route-id="@c.ClaimId">Details</a>
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@c.ClaimId">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
